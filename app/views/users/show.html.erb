<div class="well well-sm">
  <% if current_user.avatars.size > 0 %>
    <%= image_tag current_user.avatars[-2].image.url(:thumb) %>
  <% end %>
  <%= form_for(@avatar, multipart: true, html: {method: 'create' ,class: 'form-horizontal'}) do |f| %>
    <%= render partial: 'shared/errors', locals: { object: @avatar } %>
    <fieldset>
      <legend>Add an Avatar</legend>
      <div class="form-group">
        <%= f.label :image, "Image*:", class: "col-md-2 control-label" %>
        <div class="col-md-8">
          <%= f.file_field :image %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-8 col-md-offset-2">
          <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">User Details</h3>
  </div>
  <div class="panel-body">
    <%= "First Name   : #{@user.first_name}" %>
    <br></br>
    <%= "Last Name    : #{@user.last_name}" %>
    <br></br>
    <%= "Email        : #{@user.email}" %>
    <br></br>
    <%= "No. Posts    : #{@user.posts.size}" %>
    <br></br>
    <%= "No. Comments : #{@user.comments.size}" %>
    <br></br>
  </div>
</div>

<%= link_to 'My posts', user_posts_path(current_user) %>
